@{
    PageData["title"] = "AngularJS SPA | Sign In";
}
<div class="row">
    <form class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4" ng-submit="Cuentas(userName,password)">
        <h2 class="text-center">Sign In</h2>
        <div class="alert alert-success" role="alert" ng-show="ShowMessage">No existe esa cuenta o la contaseña esta erronea</div>
        <div class="form-box">
            <div class="form-group">
                <input ng-model="userName" type="text" class="form-control" placeholder="Username or Email" required />
            </div>
            <div class="form-group">
                <input ng-model="password" type="password" class="form-control" placeholder="Password" required />
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-block" type="submit" >Sign In</button>
                <button class="btn btn-primary btn-block" type="button" ng-click="register()" autofocus>Create an account</button>
                <a class="btn btn-primary btn-block" href="/forgot-password">Recuperar clave</a>
            </div>
        </div>
    </form>
</div>